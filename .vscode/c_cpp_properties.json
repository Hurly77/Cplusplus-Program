{
  "configurations": [
    {
      "name": "Linux",
      "includePath": ["${workspaceFolder}/**"],
      "defines": [],
      "compilerPath": "/usr/bin/g++",
      "cStandard": "c17",
      "cppStandard": "c++14",
      "intelliSenseMode": "linux-clang-x64"
    },
    {
      "name": "Windows",
      "includePath": ["${workspaceFolder}/**"],
      "defines": [],
      "compilerPath": "C:\\MinGW\\bin\\g++.exe",
      "cStandard": "c17",
      "cppStandard": "c++14",
      "intelliSenseMode": "gcc-x64"
    },
    {
      "name": "Windows_vscode",
      "includePath": ["${workspaceFolder}/**"],
      "defines": [],
      "cStandard": "c17",
      "cppStandard": "c++14",
      "intelliSenseMode": "msvc-x64"
      // Note: 'compilerPath' is often not needed for MSVC as VS Code can auto-detect it
    },
    {
      "name": "MacOS",
      "includePath": ["${workspaceFolder}/**"],
      "defines": [],
      "compilerPath": "/path/to/your/g++.exe", // Replace with the actual path to g++
      "cStandard": "c17",
      "cppStandard": "c++14",
      "intelliSenseMode": "gcc-x64"
    }
  ],
  "version": 4
}
